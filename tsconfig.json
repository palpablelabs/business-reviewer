{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "preserveConstEnums": true,
    "removeComments": false,
    "incremental": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "typeRoots": ["./@types", "./node_modules/@types", "./types"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
    }
  },
  "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "@types/**/*.d.ts"],
  "exclude": ["node_modules", "next.config.mjs"]
}
